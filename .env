# Epic FHIR endpoints (use sandbox or production as appropriate)
EPIC_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
EPIC_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
EPIC_AUTH_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize

# Your Epic application Client ID
EPIC_CLIENT_ID=your-epic-app-client-id-here

# Cookie domain (important for cross-subdomain sessions if needed)
EPIC_COOKIE_DOMAIN=.gblvck.com

# Database connection name (default: mysql, or create dedicated 'epic' connection)
EPIC_DB_CONNECTION=mysql
EPIC_DB_HOST=localhost
EPIC_DB_PORT=3306
EPIC_DB_DATABASE=
EPIC_DB_USERNAME=
EPIC_DB_PASSWORD=

# Full absolute paths to your RSA key pair (NEVER commit these to git!)
EPIC_PRIVATE_KEY_PATH=/home/admin/domains/gblvck.com/etc/private.key

EPIC_PUBLIC_KEY_PATH=/home/admin/domains/gblvck.com/etc/public.key
